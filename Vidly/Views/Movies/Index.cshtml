@model List<Vidly.Models.Movie>

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count() == 0)
{
    <text>There is no any movies added before.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@item.Name, "Details", new { id = item.Id})</td>
                    <td>@item.Genre.Name</td>

                </tr>
            }
        </tbody>

    </table>
}

